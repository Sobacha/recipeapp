<!-- <body> in layouts/application.html.erb -->
<div class="img-box">
  <div class="img-wrap">
    <img src="<%= @recipe.recipe_image %>", alt="You can add image at edit page.">
  </div>
</div>

<div class="recipe-head">
  <font class="recipe-title"><%= @recipe.title %></font>
  <br></br>
  <font class="recipe-category"><%= @recipe.category %></font>
</div>

<!-- bootstrap horizontal form -->
<form class="form-horizontal">

  <div class="form-group">
    <label class="col-sm-2 control-label">Ingredients</label>
    <div class="col-sm-10">
      <% @ingredients.each do |ingredient| %>
        <% if @ingredients_you_have.include?(ingredient) %>
          <p class="form-control-static food_in_list"><%= ingredient %></p>
        <% else %>
          <p class="form-control-static"><%= ingredient %></p>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Direction</label>
    <div class="col-sm-10">
      <%= simple_format(@recipe.direction, class: 'form-control-static') %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Reference(url)</label>
    <div class="col-sm-10">
      <p class="form-control-static">
        <a href=<%= @recipe.url %>><%= @recipe.url %></a>
      </p>
    </div>
  </div>

</form>

<!-- icon -->
<ul class="recipe-icon-panel">

  <li class="recipe-icon-right">

    <div>
      <%= link_to edit_recipe_path(@recipe) do %>
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
      <% end %>
      <%= link_to recipe_path(@recipe), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
      <% end %>
    </div>

  </li>

</ul>
