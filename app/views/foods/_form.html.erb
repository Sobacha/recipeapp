<!-- error msg about object validation -->
<%= render 'shared/error_messages', object: @food %>


<!-- bootstrap horizontal form -->
<%= form_for @food, {:html => {:class => "form-horizontal"}} do |f| %>

  <div class="new-food-form">

    <!-- category -->
    <div class="form-group">
      <%= f.label :category, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.select(:category, options_for_select([['Grain'], ['Meat'], ['Dairy'], ['Vegetable'], ['Fruit'], ['Other']],
                     :selected => f.object.category), {}, {class: "form-control"}) %>
      </div>
    </div>

    <!-- name -->
    <div class="form-group">
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <!-- purchase_date -->
    <div class="form-group">
      <%= f.label :purchase_date, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_select :purchase_date, class: "form-control" %>
      </div>
    </div>

    <!-- expiration_date -->
    <div class="form-group">
      <%= f.label :expiration_date, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_select :expiration_date, class: "form-control" %>
      </div>
    </div>

    <!-- qty -->
    <div class="form-group">
      <%= f.label :quantity, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :quantity, class: "form-control" %>
      </div>
    </div>

    <!-- submit button -->
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Save', class: 'btn btn-default' %>
      </div>
    </div>

  </div>

<% end %>
