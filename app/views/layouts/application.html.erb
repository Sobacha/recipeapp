    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Lato:300|Raleway|Lora:400,600|Old+Standard+TT:700" rel="stylesheet">

  </head>

  <body>
    <%= render 'shared/header' %>

    <section class="wrap">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <div class="content">

              <%= yield %>

            </div>
          </div>
        </div>
      </div>
    </section>

  </body>

</html>
